@model Quizdom.Models.User
@{
    ViewBag.Title = "Thông Tin Tài Khoản";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #000; /* nền đen toàn trang */
            color: #fff; /* chữ trắng */
        }

        .card {
            background-color: #6c757d; /* xám */
            color: #fff;
        }
    </style>
</head>
<body>
    <a href="/Home/Index" class="btn btn-secondary" style="position: fixed; top: 20px; left: 20px; z-index: 1000;">
        &larr; Quay lại Home
    </a>
    <div class="container mt-5" style="max-width: 600px;">
        <div class="card shadow p-4">

            <h2 class="text-center mb-4">Thông Tin Người Dùng</h2>

            <div class="mb-3">
                <strong>Họ và tên:</strong>
                <p>@Model.FullName</p>
            </div>

            <div class="mb-3">
                <strong>Email:</strong>
                <p>@Model.Email</p>
            </div>

            <div class="mb-3">
                <strong>Tên đăng nhập:</strong>
                <p>@Model.Username</p>
            </div>

            <div class="text-center">
                <a href="/Account/EditProfile" class="btn btn-primary px-4">Chỉnh sửa thông tin</a>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
