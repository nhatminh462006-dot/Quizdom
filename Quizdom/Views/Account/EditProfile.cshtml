@model Quizdom.Models.User
@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #000; /* nền đen toàn trang */
            color: #fff; /* chữ trắng */
        }

        .card {
            background-color: #6c757d; /* xám */
            color: #fff;
        }

        .form-control {
            background-color: #adb5bd; /* xám nhạt cho input */
            color: #000;
        }
    </style>
</head>
<body>
    <div class="container mt-5" style="max-width: 600px;">
        <div class="card shadow p-4">

            <h2 class="text-center mb-4">Chỉnh Sửa Thông Tin</h2>

            @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.UserID)

                <div class="mb-3">
                    <label class="form-label fw-bold">Họ và tên</label>
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nhập họ tên" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Tên đăng nhập</label>
                    <input class="form-control" value="@Model.Username" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Mật khẩu hiện tại</label>
                    <input type="password" name="CurrentPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Mật khẩu mới</label>
                    <input type="password" name="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Lưu thay đổi</button>

                <div class="text-center mt-3">
                    <a href="/Account/UserProfile" style="color: #fff;">← Quay lại Profile</a>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
