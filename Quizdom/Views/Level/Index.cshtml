@model List<Quizdom.Models.Exam>

@{
    // Lấy tên cấp độ đã được truyền từ Controller (BasicExams hoặc AdvancedExams)
    ViewBag.Title = ViewBag.LevelName ?? "Danh Sách Bài Thi";
    string levelName = ViewBag.LevelName ?? "Bài Thi";
}

<style>
    body {
        background-color: #0b0b0b;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .exam-list-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 20px;
    }

    .exam-header {
        border-bottom: 2px solid #2e2e2e;
        padding-bottom: 15px;
        margin-bottom: 30px;
    }

        .exam-header h1 {
            font-size: 32px;
            color: #6495ED; /* Màu xanh nổi bật */
            font-weight: 700;
        }

        .exam-header p {
            color: #aaa;
        }

    .exam-item {
        background-color: #1a1a1a;
        border-radius: 10px;
        margin-bottom: 20px;
        padding: 20px;
        transition: all 0.3s ease;
        border-left: 5px solid #6495ED; /* Điểm nhấn cấp độ */
        position: relative;
    }

        .exam-item:hover {
            transform: translateY(-3px); /* Giảm nhẹ hiệu ứng hover */
            box-shadow: 0 5px 20px rgba(100, 150, 255, 0.25);
            background-color: #222;
        }

        .exam-item h2 {
            font-size: 24px;
            margin-top: 0;
            color: #fff;
            margin-bottom: 10px;
        }

        .exam-item p {
            color: #b0b0b0; /* Làm cho mô tả dễ đọc hơn */
            margin-bottom: 15px;
            font-size: 15px;
        }

    .exam-details span {
        display: inline-block;
        margin-right: 25px;
        color: #888;
        font-size: 14px;
        font-style: italic;
    }

    .start-button {
        /* Đảm bảo nút nằm ở góc trên bên phải */
        position: absolute;
        top: 20px;
        right: 20px;
        background-color: #6495ED;
        color: white !important; /* Đảm bảo màu chữ trắng */
        padding: 8px 18px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.4);
    }

        .start-button:hover {
            background-color: #4a7fd6;
        }

    .no-exams-message {
        text-align: center;
        padding: 30px;
        background-color: #1a1a1a;
        border: 1px solid #2e2e2e;
        border-radius: 10px;
        margin-top: 40px;
    }

        .no-exams-message p {
            color: #ccc;
        }

    .back-link {
        color: #6495ED !important;
        text-decoration: none;
        font-size: 16px;
        transition: color 0.3s;
    }

        .back-link:hover {
            color: #4a7fd6 !important;
        }
</style>

<div class="exam-list-container">
    <div class="exam-header">
        <h1>Bài Thi @levelName</h1>
        <p>Danh sách các bài kiểm tra có sẵn để bạn ôn tập.</p>
    </div>

    @if (Model != null && Model.Any()) // Kiểm tra nếu có bài thi và Model không phải là null
    {
        foreach (var item in Model)
        {
            <div class="exam-item">
                @* Sử dụng @Url.Action để tạo URL, liên kết đến Action "Start" trong ExamController *@
                <a href="@Url.Action("Start", "Exam", new { examId = item.ExamID })" class="start-button">Bắt đầu</a>

                <h2>@item.Title</h2>
                <p>@item.Description</p>
                <div class="exam-details">
                    <span>⏰ @item.DurationMinutes phút</span>
                    @* Giả sử cột CreatedBy là ID người dùng hoặc có thể truy cập User.UserName *@
                    <span>✍️ Mã Người Tạo: @item.CreatedBy</span>
                </div>
                @* Dùng khoảng trống để đảm bảo nội dung không bị chồng lên nút *@
                <div style="height: 10px;"></div>
            </div>
        }
    }
    else
    {
        <div class="no-exams-message">
            <p>Không tìm thấy bài thi nào cho cấp độ **@levelName**.</p>
            <p style="margin-top: 10px;">Vui lòng thử lại sau.</p>
        </div>
    }

    <div style="margin-top: 40px; text-align: center;">
        <a href="@Url.Action("SelectLevel", "Level")" class="back-link">&larr; Chọn Cấp Độ Khác</a>
    </div>
</div>